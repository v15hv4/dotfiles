# jupyterlab
JUPYTERENVPATH="$HOME/jupyterlab/.venv"
CHROMEPATH="/opt/google/chrome/google-chrome"
alias jl='f(){ if [[ $(ps -x | grep "[j]upyterlab") ]]; then; $CHROMEPATH --app=http://localhost:8888/lab; else; $JUPYTERENVPATH/bin/python -m jupyterlab --browser="$CHROMEPATH --app=%s" </dev/null &>/dev/null & disown; fi; }; f; exit'
