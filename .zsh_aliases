# initialize gitignore from https://github.com/github/gitignore
gitignore() {
  if [ "$1" == "list" ]; then
    echo "Fetching available templates..."
    curl -sSL https://github.com/github/gitignore.git | tr , '\n' | grep -o '"name":".*\.gitignore"' | sed 's/^"name":"\(.*\).gitignore"$/\1/'
  elif [ "$1" == "init" ] && [ $# -gt 1 ]; then
    wget https://raw.githubusercontent.com/github/gitignore/main/$2.gitignore -O .gitignore
  else
    echo "Usage: ignore [list] [init <template>]"
  fi
}
